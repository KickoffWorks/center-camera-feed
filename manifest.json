{
  "manifest_version": 3,
  "name": "Center Camera Feed",
  "version": "1.0.0",
  "description": "Moves your camera feed to the top center of the screen, aligned with your webcam for better eye contact during video calls.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://zoom.us/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://*.webex.com/*",
    "https://discord.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://*.webex.com/*",
        "https://discord.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
